{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.agentauth.org/v1/manifest.json",
  "title": "Agent Manifest",
  "description": "ai-agent-auth Agent Manifest v1.0",
  "type": "object",
  "required": [
    "$schema", "version", "id", "sequence",
    "created_at", "updated_at", "valid_until",
    "metadata", "capabilities", "proof"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+"
    },
    "id": {
      "type": "string",
      "pattern": "^did:(key|web):.+$"
    },
    "sequence": {
      "type": "integer",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "valid_until": {
      "type": "string",
      "format": "date-time"
    },
    "revocation": {
      "type": "object",
      "required": ["endpoint"],
      "additionalProperties": false,
      "properties": {
        "endpoint": {
          "type": "string",
          "format": "uri"
        },
        "check_interval": {
          "type": "integer",
          "minimum": 60,
          "default": 3600
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["name", "description", "agent_version"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1024
        },
        "agent_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 32
          },
          "maxItems": 10
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "logo": {
          "type": "string",
          "format": "uri"
        },
        "operator": {
          "type": "object",
          "required": ["name"],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "contact": {
              "type": "string",
              "maxLength": 256
            }
          }
        }
      }
    },
    "capabilities": {
      "type": "object",
      "required": ["interfaces"],
      "additionalProperties": false,
      "properties": {
        "interfaces": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["protocol", "url"],
            "additionalProperties": false,
            "properties": {
              "protocol": {
                "type": "string",
                "enum": ["https", "wss"]
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "api_standard": {
                "type": "string",
                "enum": [
                  "openai-v1-chat",
                  "openai-v1-embeddings",
                  "anthropic-v1-messages",
                  "mcp-v1",
                  "a2a-v1",
                  "custom"
                ],
                "default": "custom"
              },
              "methods": {
                "type": "array",
                "items": { "type": "string" }
              },
              "schema_ref": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 64
          },
          "maxItems": 5
        },
        "permissions_required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "proof": {
      "type": "object",
      "required": [
        "type", "created", "verification_method",
        "proof_purpose", "proof_value"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "Ed25519Signature2020"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "verification_method": {
          "type": "string",
          "minLength": 1
        },
        "proof_purpose": {
          "type": "string",
          "const": "assertionMethod"
        },
        "proof_value": {
          "type": "string",
          "pattern": "^z[1-9A-HJ-NP-Za-km-z]+$"
        }
      }
    }
  }
}
